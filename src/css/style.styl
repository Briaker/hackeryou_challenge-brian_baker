.refresh
  display flex
  flex-basis 100%
  justify-content center
  padding-bottom 1em

.email-signup
  display flex
  flex-flow row wrap
  flex-basis 100%
  justify-content center
  // height 325px

  .left
    min-width 400px
    max-height 325px
    background #7beec7
    height 100%
    flex-basis 50%
    display flex
    justify-content center
    align-items center
    text-align left
    text-transform uppercase
    font-family 'Source Code Pro', monospace
    letter-spacing 0.1em
    
    .left-inner
      width calc(100% - 100px)
      height calc(100% - 100px)
      margin 50px
      display flex
      justify-content center
      flex-flow column
      h1
        font-weight 100
        padding 0
        margin 0

  .right
    max-height 325px
    background-image url("/src/img/clock.jpg")
    height 100%
    flex-basis 50%
    .right-inner
      width calc(100% - 100px)
      height calc(100% - 100px)
      background #FFF
      margin 50px
      form
        padding 50px
        display flex
        justify-content center
        align-items center
        flex-flow column

      input, button
        height 45px
        flex-basis 100%
        flex-grow 1
        margin-bottom 30px
        text-transform uppercase
        font-size medium
      
      button
        width 200px
        background #7beec7
        border none
        font-weight 600
        letter-spacing 0.15em
        color #FFF
        
        &:hover
          transition all 0.2s
          background #9cf2d5
        &:active
          transition all 0.2s
          background #75e2bd

      input
        width calc(100% - 3em)
        border 1px solid #e6e6e6
        padding 0 1.5em

    // 9cf2d5 light
    // 75e2bd dark

.footer
  min-height 300px
  background #f4f4f4
  width 100%
  margin 6em 0 0 0
  padding 1em 0
  display flex
  flex-flow row wrap

  h3, p
    line-height 0.5em
    letter-spacing 0.15em

  h3
    text-transform uppercase

  .address, .social-media, .contact
    flex-basis 100%
    flex-grow 1
    display flex
    justify-content center
    align-items center
    flex-flow column
    order 2
    text-align center
    margin 1em 0

    @media $tablet
      flex-basis 30%

    @media $desktop
      flex-basis 30%

  .address, .contact
    @media $tablet
      text-align left

    @media $desktop
      text-align left

  .address 
    @media $tablet
      order 1

    @media $desktop
      order 1

  .contact
    @media $tablet
      order 3

    @media $desktop
      order 3

  .social-media
    text-align center
    flex-grow 2
    order 3

    .icons
      display flex
      justify-content center
      flex-flow row
      
      .icon
        margin 1em 0.5em

      font-family "socialMediaIcons"
      font-size larger
      margin-bottom 0.8em

    h3
      line-height 1em

    @media $tablet
      order 2

    @media $desktop
      order 2