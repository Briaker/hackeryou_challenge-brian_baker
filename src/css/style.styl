// Import all partials
// @require './_*.styl'

body
  display: flex
  flex-flow row wrap
  justify-content center
  font-family 'Raleway', sans-serif
  font-weight 400
  margin 0
  padding 0


.wrapper
  min-height 800px
  max-width: 1170px
  width 100%
  margin 0px
  padding 0px
  display flex
  flex-flow row wrap

.wrapper > *
  margin-bottom 6em
  flex-basis 100%
  
  @media all and (min-width: 600px) 
    flex-basis 100%

  @media all and (min-width: 800px) 
    flex-basis 100%

.inner-wrapper
  // height 400px
  margin-top 5em
  display flex
  flex-flow row wrap
  justify-content space-between


.title
  height 3em
  text-transform uppercase
  position relative
  flex-basis 100%
  flex-grow 10
  letter-spacing 0.2em
  
  h1, h2, h3
    font-family 'Source Code Pro', monospace
    font-weight 600
    

.title-underline
    border-bottom 1px solid #111
    position absolute
    height 2.75em
    width 2.5em


.subtitle
  flex-basis 100%
  flex-grow 1
  text-transform uppercase


.nav-bar
  display flex
  align-items center
  height 100px
  margin-bottom 0.75em
  
  .oak-logo
    font-family 'Kaushan Script', cursive

    h1
      margin 0 0.4em 0 0.2em
    
    .strike-through
      border-bottom 3px double #111
      position relative
      top -1.5em
  
  .menu-wrapper
    position relative
    text-align right
    display flex
    flex-grow 10
    justify-content flex-end
    align-items center

    .menu-label
      position relative
      display block

      &.menu-opened
        transition all 0.5s
        transform translateX(140%)

      &:not(.menu-opened)
        transition all 0.5s
        transform translateX(0)
        

    .menu-toggle
      position relative
      padding 18px 11px
      margin-left 1em
      width 26px
      height 12px
      z-index 1
      user-select none
      cursor pointer
      display flex
  
      &:hover
        transition all 0.5s
        background #7beec7

      &.menu-opened
        transition all 0.5s
        background #7beec7

      &:not(.menu-opened)
        transition all 0.5s
        background tranparent

      .icon
         background-image url("/src/img/hamburger.png")
         width 26px
         height 12px

    .menu
      background tranparent
      list-style-type none
      height 3em
      display flex
      overflow hidden

      a
        margin 1em
        white-space nowrap
        text-decoration none

        &:visited
          color #111

        &:hover
          color #7beec7

      &.menu-opened
        transition all 0.5s
        flex-grow 0.45
        width 5em

      &:not(.menu-opened)
        transition all 0.5s
        flex-grow 0.001
        width 0


.header
  height 610px
  padding-left 6em
  font-family 'Poiret One', cursive
  text-transform uppercase
  font-weight 900
  display flex
  flex-flow row wrap
  align-content center
  background-image url("/src/img/header.jpg")
  
  .heading
    height 5em
    flex-basis 100%
    letter-spacing 0.5em
    
    .highlight
      padding 0.5em
      font-weight 100
      background #7beec7
  
  .sub-heading
    font-weight 100
    height 5em
    
    ::after
      font-weight 100
      padding-left 0.3em
      font-size 2em
      vertical-align -15%
      content "|"


.history
  height 500px
  @media all and (min-width: 800px) 
    flex-basis 0px
    flex-grow 1


.history-image
  background-image url("/src/img/history.jpg")
  @media all and (min-width: 800px) 
    flex-grow 0
    flex-shrink 0
    flex-basis 471px


.choose
  .subtitle
    letter-spacing 0.1em

  @media all and (min-width: 800px) 
    flex-basis 100%
    flex-grow 1

  .info-box
    padding 0 1.5em
    
    @media all and (min-width: 800px) 
      flex-basis 20%
      flex-grow 1
    
    &:first-child
      padding-left 0
    
    &:last-child
      padding-right 0


.our-work
  .menu-wrapper
    margin-top 4em
    justify-content flex-start

    .menu-toggle
      margin-left 0em


.product-box
  flex-grow 0
  margin-bottom 30px
  width 370px
  height 400px
  background #feCCCC
  position relative

  .overlay 
    opacity 0
    position absolute
    top 0
    left 0
    width 327px
    height 357px
    padding 20px
    background rgba(123, 238, 199, 0.75)
    z-index 2
    
    &:hover
      opacity 1
      border 3px solid #000
  
    .cross
      position relative
      left 40%
      top 20%
      width 70px
      height 70px
      
      .vertical
        position relative
        height 100%
        left 50%
        top 50%
        border-left 1px solid #000
      
      .horizontal
        width 100%
        border-top 1px solid #000

    .heart
      font-family 'Source Code Pro', monospace
      
      .heart-symbol
        font-weight 100
        padding 0
        margin 0
        position relative
        left 6px
        top -10px
      
      .heart-value
        margin 0
        padding 0
        line-height 0
        position relative
        top -10px
    
    .product-titles
      position relative
      height 3em
      top 55%
      text-transform uppercase
      
      .product-title
        h3
          font-weight 900
        margin 0
        padding 0
        line-height 0
        position relative
      
      .product-subtitle
        h4
          font-weight 100
        font-weight 100
        margin 0
        padding 0
        line-height 0
        position relative


.refresh
  display flex
  flex-basis 100%
  justify-content center
  padding-bottom 1em

.email-signup
  display flex
  flex-flow row wrap
  flex-basis 100%
  justify-content center
  align-items center
  height 325px

  .left
    background #7beec7
    height 100%
    flex-basis 50%
    display flex
    justify-content center
    align-items center
    text-align left
    text-transform uppercase
    font-family 'Source Code Pro', monospace
    letter-spacing 0.1em
    
    .left-inner
      h1
        font-weight 100
        padding 0
        margin 0

  .right
    background-image url("/src/img/clock.jpg")
    height 100%
    flex-basis 50%
    .right-inner
      width calc(100% - 100px)
      height calc(100% - 100px)
      background #FFF
      margin 50px
      form
        padding 50px
        display flex
        justify-content center
        align-items center
        flex-flow column

      input, button
        height 45px
        flex-basis 100%
        flex-grow 1
        margin-bottom 30px
        text-transform uppercase
        font-size medium
      
      button
        width 200px
        background #7beec7
        border none
        font-weight 600
        letter-spacing 0.15em
        color #FFF
        
        &:hover
          transition all 0.2s
          background #9cf2d5
        &:active
          transition all 0.2s
          background #75e2bd

      input
        width calc(100% - 3em)
        border 1px solid #e6e6e6
        padding 0 1.5em

    // 9cf2d5 light
    // 75e2bd dark

.footer
  height 300px
  background #f4f4f4
  width 100%
  margin 0px
  padding 0px
  display flex
  flex-flow row wrap

  .address
    flex-basis 30%
    flex-grow 1
    display flex
    justify-content center
    // align-items center
    flex-flow column
    text-align left

  .social-media
    flex-basis 30%
    flex-grow 1
    display flex
    justify-content center
    align-items center
    flex-flow column

  .contact
    flex-basis 30%
    flex-grow 1
    display flex
    justify-content center
    align-items center
    flex-flow column
    text-align left

  .inner-footer
    width calc(100% - 100px)
    height calc(100% - 100px)
    background #FFF
    margin 50px
    
  h3, p
    line-height 0
      




