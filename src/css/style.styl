body
  display: flex
  justify-content center
  font-family 'Raleway', sans-serif
  font-weight 400


.wrapper
  min-height 800px
  max-width: 1170px
  width 100%
  margin 0px
  padding 0px
  display flex
  flex-flow row wrap
  

.wrapper > *
  margin .5em
  flex-basis 100%
  height 500px
  
  @media all and (min-width: 600px) 
    flex-basis 100%
    background #2e2e6e
  
  @media all and (min-width: 800px) 
    flex-basis 100%
    background #1e6e1e

.title
  height 3em
  text-transform uppercase
  position relative
  
  h1, h2, h3
    font-family 'Source Code Pro', monospace
    font-weight 600
    word-spacing 0.25em
    

.title-underline
    border-bottom 1px solid #111
    position absolute
    height 2.75em
    width 2.5em


.subtitle
  text-transform uppercase


.nav-bar
  display flex
  align-items center
  height 100px
  
  .oak
    font-family 'Kaushan Script', cursive
    h1
      margin 0 0.4em 0 0.2em
    
    .strike-through
      border-bottom 3px double #111
      position relative
      top -1.5em
  
  .menu-wrapper
    flex-grow 10
    text-align right
    display flex
    justify-content flex-end
    align-items center
    
    .menu-toggle
      padding-left 0.5em
      position relative
      flex-basis 25px
      width 25px
      height 12px
      z-index 1
      user-select none
      
      input[type=checkbox]
        display block
        width 25px
        height 25px
        position absolute
        top -10px
        left 2px
        cursor pointer
        opacity 1
        z-index 2
        background red

        ~ ul
          transform scale(1.0, 1.0)
          opacity 1
      
      .icon
         background-image url("/src/img/hamburger.png")
         width 25px
         height 12px

      #menu
        opacity 1
        position absolute
        width 300px
        margin -100px 0 0 -50px
        padding 50px
        padding-top 3em

        background #ededed
        list-style-type none

        transform-origin 0% 0%
        transform translate(-100%, 0)

        transition transform 0.5s cubic-bezier(0.77,0.2,0.05,1.0)

        li
          padding 10px 0
          font-size 22px


.header
  height 610px
  padding-left 6em
  font-family 'Poiret One', cursive
  text-transform uppercase
  font-weight 900
  display flex
  flex-flow row wrap
  align-content center
  
  .heading
    height 5em
    flex-basis 100%
    letter-spacing 0.5em
    
    .highlight
      padding 0.5em
      font-weight 100
      background #7beec7
  
  .sub-heading
    font-weight 100
    height 5em
    
    ::after
      font-weight 100
      padding-left 0.3em
      font-size 2em
      vertical-align -15%
      content "|"


.history
  background #6e6e1e
  @media all and (min-width: 800px) 
    flex-basis 0px
    flex-grow 1

.history-image
  background #6e6e1e
  @media all and (min-width: 800px) 
    flex-grow 0
    flex-shrink 0
    flex-basis 471px

.choose
  background #6e6e1e
  @media all and (min-width: 800px) 
    flex-basis 100%
    flex-grow 10


.choose-box
  @media all and (min-width: 800px) 
    background #2e2e6e
    flex-basis 20%
    flex-grow 1


