$tablet = "(min-width: 768px)"
$desktop = "(min-width: 1170px)"

@font-face 
  font-family "socialMediaIcons"
  src url("../fonts/Socialico.ttf")


a
  text-decoration none

  color #111

  &:visited
    color #111

  &:hover
    color #7beec7


body
  display: flex
  flex-flow row wrap
  justify-content center
  font-family 'Raleway', sans-serif
  font-weight 400
  margin 0
  padding 0


.debug-info
  position absolute
  top 0 
  left 0
  
  &::before
    content "Phone"
    
    @media $tablet
      content "Tablet"

    @media $desktop
      content "Desktop"


.wrapper
  min-height 800px
  max-width: 1170px
  width 100%
  margin 0px
  padding 0px
  display flex
  flex-basis 100%
  flex-shrink 0
  flex-grow 1
  flex-flow row wrap


.wrapper > *
  // &:not(:last-child)
  margin-bottom 6em
  flex-basis 100%
  justify-content center
  
  @media $tablet
    flex-basis 100%
    justify-content center
    // padding 6em

  // @media $desktop 
  //   justify-content flew-start
  //   flex-basis 100%


.inner-wrapper
  // height 400px
  margin-top 5em
  display flex
  flex-flow row wrap
  justify-content center

  // @media $desktop
  //   justify-content space-between


.title
  height 3em
  position relative
  flex-basis 100%
  flex-grow 10
  display flex
  justify-content center
  text-transform uppercase
  letter-spacing 0.2em
  white-space nowrap
  margin-bottom 2em
  
  h1, h2, h3
    font-family 'Source Code Pro', monospace
    font-weight 600
  
  @media $tablet
    justify-content flex-start

  @media $desktop
    justify-content flex-start

.title-underline
    border-bottom 1px solid #111
    position absolute
    height 3.75em
    width 2.5em
  
    @media $tablet
      left 0

    @media $desktop
      left 0


.subtitle
  flex-basis 100%
  flex-grow 1
  text-transform uppercase
  text-align center

  @media $tablet
    text-align left

  @media $desktop
    text-align left


.nav-bar
  display flex
  align-items center
  height 100px
  margin-bottom 0.75em
  
  .oak-logo
    font-family 'Kaushan Script', cursive
    flex-shrink 0
    flex-grow 1
    max-width 6em
    padding-left 1em

    h1
      margin 0 0.4em 0 0.2em
    
    .strike-through
      border-bottom 3px double #111
      position relative
      top -1.5em

    @media $desktop
      padding-left 0em
  
  .menu-wrapper
    // position relative
    display flex
    flex-grow 1
    flex-shrink 10
    justify-content flex-end

    .menu-label
      position relative
      display block

      &.menu-opened
        transition all 0.5s
        transform translateX(140%)

      &:not(.menu-opened)
        transition all 0.5s
        transform translateX(0)
        

    .menu-toggle
      position relative
      padding 18px 11px
      margin-left 1em
      width 26px
      height 12px
      z-index 1
      user-select none
      cursor pointer
      display flex
  
      &:hover
        transition all 0.5s
        background #7beec7

      &.menu-opened
        transition all 0.5s
        background #7beec7

      &:not(.menu-opened)
        transition all 0.5s
        background tranparent

      .icon
         background-image url("/src/img/hamburger.png")
         width 26px
         height 12px

    .menu
      background tranparent
      list-style-type none
      height 3em
      display flex
      overflow hidden

      a
        margin 1em
        white-space nowrap

      &.menu-opened
        transition all 0.5s
        flex-grow 0.45
        flex-shrink 0
        width 5em

      &:not(.menu-opened)
        transition all 0.5s
        flex-grow 0.001
        width 0


.header
  height calc(610px - 12em)
  font-family 'Poiret One', cursive
  text-transform uppercase
  font-weight 900
  display flex
  flex-flow row wrap
  justify-content center
  align-content center
  background-image none
  background #ededed
  padding 2em
  flex-basis 100%

  @media $tablet
    background-image url("/src/img/header.jpg") 
    flex-basis 100%
    padding 6em
    .heading
      display flex
      justify-content center
      flex-basis 100%

    .sub-heading
      display flex
      justify-content center
      flex-basis 100%

  @media $desktop
    background-image url("/src/img/header.jpg") 
    .heading
      display flex
      justify-content flex-start

    .sub-heading
      display flex
      justify-content flex-start

  .heading
    height 5em
    letter-spacing 0.5em
    
    .highlight
      padding 0.5em
      font-weight 100
      background #7beec7
  
  .sub-heading
    font-weight 100
    height 5em
    
    ::after
      font-weight 100
      padding-left 0.3em
      font-size 2em
      vertical-align -15%
      content "|"


.history
  padding 0 5em
  height 500px

  @media $desktop
    padding 0 10em 0 0
    flex-basis 0px
    flex-grow 1


.history-image
  background-image none

  @media $desktop
